<h1>Burgers and Butts</h1>

<main>
  <div class="container">
    <div class="row" id="eaten"> Devoured! 
      <div class="col s6" id="eatMe"> Click to Devour!
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6"> 
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>New Burger</h2>

<div class="row">
  <div class="col s12">
    <form action="/" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Burger Burger">
      <button type="submit" class="addBurgerButton">Add New Burger</button>
    </form>
  </div>
</div>
